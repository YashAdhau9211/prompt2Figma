{
  "name": "prompt2figma-plugin",
  "version": "1.0.0",
  "main": "dist/code.js",
  "scripts": {
    "build": "node build.js && npm run build:ui",
    "build:ui": "inline-source src/ui/ui.html --compress false > dist/ui.html",
    "copy-ui-js": "cp src/ui/ui.js dist/ui.js",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.116.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "esbuild": "^0.25.10",
    "happy-dom": "^12.0.0",
    "inline-source-cli": "^1.1.0",
    "typescript": "^5.4.0",
    "vitest": "^1.0.0"
  }
}
